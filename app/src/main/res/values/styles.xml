<resources>

    <style name="AppTheme" parent="DefaultTheme">

    </style>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryDark">@color/darkerRed</item>
        <item name="colorAccent">@color/darkRed</item>
        <item name="android:windowBackground">@color/almostWhite</item>
        <item name="searcher_options_background">@color/lighterBlack</item>
        <item name="searcher_options_search_box_background">@color/white</item>
        <item name="searcher_options_search_box_padding">8dp</item>
        <item name="searcher_options_label_textappearance">
            @style/SearcherOptionsLabelTextAppearanceDefault
        </item>
        <item name="searcher_options_autocompletetextview_background">@color/white</item>
        <item name="searcher_options_autocompletetextview_padding">8dp</item>
        <item name="searcher_options_dropdownicon_background">@color/darkRed</item>
        <item name="searcher_options_dropdownicon_src">@drawable/ic_arrow_drop_down_whte_24dp
        </item>
        <item name="searcher_options_numberpicker_theme">
            @style/SearcherOptonsNumberPickerThemeDefault
        </item>
        <item name="searcher_options_spinner_background">@color/white</item>
        <item name="searcher_options_spinner_padding">8dp</item>
        <item name="searcher_options_spinner_height">40dp</item>
        <item name="searcher_options_button_style">@style/SearcherOptionsButtonStyleDefault</item>
        <item name="searcher_searchbox_style">@style/SearcherSearchBoxStyleDefault</item>
        <item name="searcher_results_item_light_themed_background">
            @drawable/background_searcher_results_item_white
        </item>
        <item name="searcher_results_item_light_themed_text_color">@color/lighterBlack</item>
        <item name="searcher_results_item_dark_themed_background">
            @drawable/background_searcher_results_item_black
        </item>
        <item name="searcher_results_item_dark_themed_text_color">@color/white</item>
        <item name="game_details_component_background">@color/white</item>
        <item name="game_details_text_appearance">@style/GameDetailsTextAppearanceDefault</item>
        <item name="game_details_header_text_appearance">
            @style/GameDetailsHeaderTextAppearanceDefault
        </item>
        <item name="game_details_title_text_appearance_">
            @style/GameDetailsTitleTextAppearanceDefault
        </item>
    </style>

    <style name="SearcherOptionsLabelTextAppearanceDefault" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearcherOptonsNumberPickerThemeDefault">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SearcherOptionsButtonStyleDefault" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_searcher_options_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearcherSearchBoxStyleDefault" parent="AppTheme">
        <item name="searcher_searchbox_background">@color/lighterBlack</item>
        <item name="searcher_searchbox_padding">12dp</item>
        <item name="searcher_searchbox_textcolor">@color/white</item>
        <item name="searcher_searchbox_close_drawable">@drawable/ic_close_white_24dp</item>
        <item name="searcher_searchbox_close_background">@android:color/transparent</item>
        <item name="searcher_searchbox_edittext_background">@color/white</item>
        <item name="searcher_searchbox_edittext_padding">8dp</item>
        <item name="searcher_searchbox_edittext_topmargin">8dp</item>
    </style>

    <style name="GameDetailsTextAppearanceDefault" parent="TextAppearance.AppCompat">

    </style>

    <style name="GameDetailsHeaderTextAppearanceDefault" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameDetailsTitleTextAppearanceDefault" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
